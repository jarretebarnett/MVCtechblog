<div class="container">
    <div class="row">
        <div class="column" style="max-width: 25rem;">
            <div class="input-group">
                <span class="input-group-text">Username</span>
                <input type="text" id="name-signup" class="form-control" placeholder="Enter a Username" aria-label="Enter a Username" aria-describedby="addon-wrapping">
            </div>
            <br>
            <div class="input-group">
                <span class="input-group-text">Email</span>
                <input type="text" id="email-signup" class="form-control" placeholder="Enter an Email Address" aria-label="Enter an Email Address" aria-describedby="addon-wrapping">
            </div>
            <br>
            <div class="input-group">
                <span class="input-group-text">Password</span>
                <input type="password" id="password-signup" class="form-control" placeholder="Enter a Password" aria-label="Enter a Password" aria-describedby="addon-wrapping">
            </div>
            <br>
            <a class="signup-form" type="submit" style="color: #1b89bc;">Sign-Up</a>
        </div>
    </div>
</div>